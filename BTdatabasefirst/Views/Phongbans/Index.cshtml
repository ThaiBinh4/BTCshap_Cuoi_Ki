@model IEnumerable<BTdatabasefirst.Models.Phongban>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        text-align: center;
        color: blue;
    }

    .chucnang {
        width: 150px;
        height: 30px;
        background-color: greenyellow;
        float: left;
        text-align: center;
        margin: 5px;
    }

        .chucnang a {
            text-decoration: none;
            color: black;
        }

    .chitiet {
        width: 70px;
        height: 30px;
        float: left;
        margin: 5px;
        background-color: red;
        text-align: center;
    }

        .chitiet > a {
            text-decoration: none;
            color: white;
        }
</style>
<h1>Các phòng ban trong công ty </h1>

<p>
    <div class="chucnang"><a asp-action="Create">Thêm phòng ban</a></div>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Tenphongban) *@
                Tên phòng ban
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Mota) *@
                Mô tả
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tenphongban)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                    <div class="chitiet"><a asp-action="Edit" asp-route-id="@item.Idpb">Edit</a></div>
                    <div class="chitiet"><a asp-action="Details" asp-route-id="@item.Idpb">Details</a></div>
                    <div class="chitiet"><a asp-action="Delete" asp-route-id="@item.Idpb">Delete</a></div>
                
            </td>
        </tr>
}
    </tbody>
</table>
