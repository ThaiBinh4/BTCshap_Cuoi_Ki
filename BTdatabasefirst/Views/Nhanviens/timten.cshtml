@model IEnumerable<BTdatabasefirst.Models.Nhanvien>

@{
    ViewData["Title"] = "timten";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    h1 {
        text-align: center;
        color: blue;
        
    }

    .chitiet {
        width: 70px;
        height: 30px;
        float: left;
        margin: 5px;
        background-color: red;
        text-align: center;
    }

        .chitiet > a {
            text-decoration: none;
            color: white;
        }
    body{
        background-image: url(/img/bk2.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center 50px;
       
    }
</style>
<h1>Nhân viên tìm được </h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Mã nhân viên
            </th>
            <th>
                Tên nhân viên
            </th>
            <th>
                Ngày sinh
            </th>
            
            <th>
                Id chức vụ
            </th>
            <th>
                Id phòng ban
            </th>
            <th>
                Ảnh
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Idnv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tennhanvien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngaysinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idcv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idpb)
                </td>
                <td>
                    <img src="~/img/@item.Avatar" alt="Avatar" width="100" />
                </td>
               
            </tr>
        }
    
        
    </tbody>
</table>
