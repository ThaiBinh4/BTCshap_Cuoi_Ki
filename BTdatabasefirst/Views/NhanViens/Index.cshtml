@model IEnumerable<BTdatabasefirst.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index nhân viên</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tennhanvien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tuoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdphongbanNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tennhanvien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tuoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdphongbanNavigation.Idphongban)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idnhanvien">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idnhanvien">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idnhanvien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
